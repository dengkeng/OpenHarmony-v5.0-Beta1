import("//build/test.gni")
import("//foundation/multimodalinput/input/multimodalinput_mini.gni")

output_path = "multimodalinput/mmi_unit_out"

group("test") {
  testonly = true
  deps = [ ":mmi-libadapter-hotplug-test" ]
}

ohos_unittest("mmi-libadapter-hotplug-test") {
  module_out_path = output_path
  include_dirs = [
    "${mmi_path}/util/common/include",
    "../include",
  ]

  sources = [
    "../src/hotplug_detector.cpp",
    "hotplug_detector_test.cpp",
  ]

  deps = [ "//third_party/googletest:gmock_main" ]

  external_deps = [
    "c_utils:utils",
    "hilog:libhilog",
  ]
}
